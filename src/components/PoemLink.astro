---
const { url, title } = Astro.props;
---

<li class="group mt-2">
  <div class="inline-block w-4">
    <span
      class="absolute transition-all duration-300 group-hover:invisible group-hover:opacity-0"
    >
      &#8275;
    </span>
    <span
      class="invisible ml-1 opacity-0 transition-all duration-300 group-hover:visible group-hover:opacity-100"
    >
      &ndash;
    </span>
  </div>
  <a
    class="inline-block no-underline after:block after:h-px after:w-0 after:bg-primary after:transition-all after:duration-300 hover:after:w-full dark:after:bg-secondary"
    href={url}
  >
    {title}
  </a>
</li>
