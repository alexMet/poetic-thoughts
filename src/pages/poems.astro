---
import BaseLayout from '../layouts/BaseLayout.astro';
import PoemLink from '../components/PoemLink.astro';

const allPoems = Object.values(import.meta.glob('../pages/poems/*.md', { eager: true }) as Record<string, ExportedMarkdownModuleEntities>);
const pageTitle = 'Ποιήματα';
const metaDescription = 'Η λίστα με τις ποιητικές μου σκέψεις.';
---

<BaseLayout pageTitle={pageTitle} metaDescription={metaDescription}>
  <h1 class="my-8 text-5xl font-bold">{pageTitle}</h1>
  <ul>
    {
      allPoems.map((poem) => (
        <PoemLink url={poem.url} title={poem.frontmatter.title} />
      ))
    }
  </ul>
</BaseLayout>
